<Window x:Class="FileSizeTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSizeTool"
        mc:Ignorable="d"
        DataContext="{StaticResource ViewModel}"
        Title="File Size Tool" 
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Help">
                <MenuItem Header="About"
                          Command="{Binding OpenAboutWindow}"/>
                <MenuItem Header="User Guide"
                          Command="{Binding OpenUserGuide}"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid Row="0">
                <StackPanel IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                    
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
